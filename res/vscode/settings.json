        "syntax.function": "#00cc00",
        "syntax.modifier": "#ffcc00",
        "syntax.number": "#ffcc99",
        "syntax.operator": "#e60000",
        "syntax.punctuation": "#ff99ff",
        "syntax.scope": "#ff99ff",
        "syntax.string": "#ffff99",
        "syntax.type": "#4dffff",
        "syntax.variable": "#3399ff",
    },
    "workbench.editor.tabSizing": "shrink",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",
